    </article>
    <!-- 지역 목록 영역-->
    <section id="selectLocation" class="float">
      <!-- 지역 목록 상단 -->
      <article id="topLocationMenu">
        <span id="location">서울시</span>
        <span id="findLocation">지역 시설 찿기</span>
      </article>
      <!-- 지역 목록 -->
      <article id="list">
